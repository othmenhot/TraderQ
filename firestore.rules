rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /trades/{tradeId} {
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    match /user_profiles/{userId} {
    	allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    match /learning_paths/{pathId} {
      allow read: if request.auth != null;
    }

    match /user_badges/{badgeId} {
      // Allow users to read and create their own badges
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // Allow read access to public content
    match /learning_paths/{pathId}/{subcollection}/{document=**} {
      allow read: if request.auth != null;
    }
    match /chapter_content/{chapterId} {
      allow read: if request.auth != null;
    }
     match /quizzes/{quizId} {
      allow read: if request.auth != null;
    }
  }
}
